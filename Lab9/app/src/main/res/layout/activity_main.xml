<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTask1"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Task 1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTask2"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Task 2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTask1" />

    <Button
        android:id="@+id/buttonTask3"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Task 3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTask2" />

    <Button
        android:id="@+id/buttonTask4"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Task 4"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTask3" />

    <Button
        android:id="@+id/buttonTask5"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        android:text="Task 5,7"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTask4" />

    <Button
        android:id="@+id/buttonTask6"
        android:layout_width="203dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:text="Task 6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTask5" />

</androidx.constraintlayout.widget.ConstraintLayout>